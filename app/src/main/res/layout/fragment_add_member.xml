<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.FragmentAddMember">
<com.google.android.material.imageview.ShapeableImageView
    android:id="@+id/imgPic"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:scaleType="centerCrop"
    android:src="@drawable/boy"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.544"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.051" />

<ImageView
android:id="@+id/imgTakeImage"
android:layout_width="50dp"
android:layout_height="40dp"
android:src="@drawable/ic_camera"
app:layout_constraintBottom_toBottomOf="@+id/imgPic"
app:layout_constraintEnd_toEndOf="@+id/imgPic"
app:layout_constraintHorizontal_bias="0.50"
app:layout_constraintStart_toStartOf="@+id/imgPic"
app:layout_constraintTop_toTopOf="@+id/imgPic"
app:layout_constraintVertical_bias="1.1"
tools:ignore="ContentDescription" />

<LinearLayout
android:layout_width="match_parent"
android:layout_height="0dp"
android:orientation="vertical"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.0"
app:layout_constraintTop_toBottomOf="@+id/imgPic">

<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:layout_marginTop="10dp"
            android:inputType="text|textCapSentences"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:id="@+id/edtFirstName"
            tools:ignore="Autofill,HardcodedText" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:layout_marginTop="10dp"
            android:inputType="text|textCapSentences"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:id="@+id/edtLastName"
            tools:ignore="Autofill,HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="UselessLeaf" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                tools:ignore="HardcodedText"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:id="@+id/radioGroub"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="@string/male"
                    android:checked="true"
                    android:id="@+id/rdMale"
                    tools:ignore="HardcodedText"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="@string/female"
                    android:layout_marginStart="10dp"
                    android:id="@+id/rdFeMale"/>

            </RadioGroup>
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:id="@+id/edtAge"
            tools:ignore="Autofill,HardcodedText" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Weight"
            android:layout_marginTop="10dp"
            android:inputType="numberDecimal"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:id="@+id/edtWeight"
            android:maxLength="6"
            tools:ignore="Autofill,HardcodedText" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:id="@+id/edtMobile"
            android:maxLength="10"
            tools:ignore="Autofill,HardcodedText" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:id="@+id/edtAddress"
            android:maxLength="10"
            tools:ignore="Autofill,HardcodedText,TextFields" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Date of joining"
                android:layout_weight="1"
                android:id="@+id/edtJoining"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:enabled="false"
                tools:ignore="Autofill,HardcodedText,TextFields"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_calendar"
                android:id="@+id/imgPicDate"
                tools:ignore="ContentDescription"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MemberShip: "
                android:textSize="16sp"
                android:layout_weight="0.7"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:id="@+id/spMemberShip"
                android:entries="@array/membership"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:backgroundTint="@color/drop_down_icon"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:weightSum="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expire On : "
                android:textSize="16sp"
                android:layout_weight="0.7"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:inputType="date"
                android:enabled="false"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:id="@+id/edtExpire"
                tools:ignore="Autofill" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:weightSum="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/discount"
                android:textSize="16sp"
                android:layout_weight="0.7"
                android:textColor="@color/black"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:inputType="numberDecimal"
                android:textSize="15sp"
                android:id="@+id/edtDiscount"
                android:textColor="@color/black"
                tools:ignore="Autofill,HardcodedText"
                android:gravity="end"
                android:text="0.00"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:weightSum="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textSize="16sp"
                android:layout_weight="0.7"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:inputType="numberDecimal"
                android:textSize="15sp"
                android:id="@+id/edtAmount"
                android:textColor="@color/black"
                tools:ignore="Autofill"
                android:gravity="end"
                android:hint="@string/_0_00"/>

        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Save"
            android:id="@+id/btnAddMemberSave"
            android:background="@color/purple_500"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>